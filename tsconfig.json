{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "NodeNext",
        "noImplicitAny": true,
        "strict": true,
        "removeComments": true,
        "declaration": true,
        "lib": ["ESNext", "DOM"],
        "outDir": "dist"
    },
    "include": [
        // source
        "src/**/*.ts",
        "src/**/*.d.ts"
    ],
    "exclude": ["node_modules"]
}
